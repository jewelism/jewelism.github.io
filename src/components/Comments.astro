---
// Props로 페이지의 고유 식별자를 받습니다
interface Props {
  pathname: string;
}

const { pathname } = Astro.props;
---

<div id="comments" class="comments">
  <script
    src="https://utteranc.es/client.js"
    repo="jewelism/jewelism.github.io"
    issue-term={pathname}
    label="comments"
    theme="preferred-color-scheme"
    crossorigin="anonymous"
    async></script>
</div>

<style>
  .comments {
    margin-top: 2rem;
  }
</style>
